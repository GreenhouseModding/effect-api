{
    "schemaVersion": 1,
    "id": "${mod_id}_entity",
    "version": "${version}",
    "name": "${mod_name} Entity",
    "description": "${mod_description}",
    "authors": [
        "${mod_author}"
    ],
    "contributors": [
        "${fabric_mod_contributors}"
    ],
    "contact": {
        "homepage": "${homepage}",
        "issues": "${issues}",
        "sources": "${sources}"
    },
    "license": "${mod_license}",
    "icon": "${mod_id}.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "house.greenhouse.effectapi.entity.impl.EffectAPIEntityFabric"
        ],
        "client": [
            "house.greenhouse.effectapi.entity.impl.client.EffectAPIEntityFabricClient"
        ],
        "preLaunch": [
            "house.greenhouse.effectapi.entity.impl.EffectAPIEntityFabricPre"
        ]
    },
    "mixins": [
        "${mod_id}_entity.mixins.json",
        "${mod_id}_entity.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": "${fabric_loader_range}",
        "fabric-api": "*",
        "minecraft": "${fabric_minecraft_version_range}",
        "java": ">=${java_version}",
        "${mod_id}_base": ">=${version}"
    },
    "custom": {
        "modmenu": {
            "badges": [ "library" ],
            "parent": {
                "id": "${mod_id}",
                "name": "${mod_name}",
                "description": "${mod_description}",
                "icon": "${mod_id}.png",
                "badges": [ "library" ]
            }
        }
    }
}